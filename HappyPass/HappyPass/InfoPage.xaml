<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HappyPass.InfoPage" BackgroundColor="{StaticResource MainBlue}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout>
                    <Label Text="Welcome to &#10; Be Happy Pass"
             Style="{StaticResource ProfileHeading1}" Margin="0, 20, 0, 10"/>
                    <BoxView BackgroundColor="{StaticResource PureWhite}"
               HeightRequest="1" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
                <!--&#10; is a breakpoint-->

                <StackLayout>
                    <Label Text="In this app you will find a wide range &#10; of offers that will let you experince more for less within the resort" Style="{StaticResource LoginPText}"/>

                    <StackLayout Margin="0, 10, 0, 10">
                        <Button x:Name="NextBtn" Text="NEXT" Style="{StaticResource ProfileButton}" Clicked="NextBtn_Clicked"/>
                    </StackLayout>
                
                </StackLayout>


                <StackLayout>
                    <Image Source="legoland.jpg" x:Name="BottomImage" VerticalOptions="End" Aspect="AspectFill" Margin="0, 10, 0, 0"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>