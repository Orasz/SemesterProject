<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HappyPass.InfoPage">
    <Grid RowSpacing="0" BackgroundColor="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--HEEADER SECTION-->
        <StackLayout Grid.Row="0">
            <Label Text="Welcome to 
                   BE HAPPY PASS" XAlign="Center" FontSize="Large" Margin="0,20,0,0" />
            <BoxView BackgroundColor="White" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
        </StackLayout>


        <!--LOGIN TEXT SECTION-->
        <Grid Grid.Row="1">
            <Label Text="In this app you will find a wide range
                   of offers that will let you experince more
                   for less within the resort" XAlign="Center"/>

        </Grid>

        <StackLayout Grid.Row="2">
            <Label Text="Back" Margin="0,20,0,0" XAlign="Center" />

            <Button x:Name="NextBtn" Clicked="NextBtn_Clicked" Text="Next"/>
        </StackLayout>

        <!--BUTTOM/LEGOLANDIMAGE SECTION-->
        <Image Source="legoland.jpg" Aspect="AspectFill" Grid.Row="4"/>

    </Grid>

</ContentPage>